<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#B7FFFFFF"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp">


    <RelativeLayout
        android:id="@+id/cart_layout_r"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="4dp">

        

        <ImageView
            android:id="@+id/cart_layout_imgView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/cart_layout_name_txtview"
            android:layout_toEndOf="@+id/cart_layout_imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:text="TextView" />
        <TextView
            android:id="@+id/cart_layout_price_txtview"
            android:layout_toEndOf="@+id/cart_layout_imgView"
            android:layout_below="@+id/cart_layout_name_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="#2196F3"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="TextView" />
        <TextView
            android:id="@+id/cart_layout_type_txtview"
            android:layout_toEndOf="@+id/cart_layout_imgView"
            android:layout_margin="2dp"
            android:layout_below="@+id/cart_layout_price_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="TextView" />





        <ImageButton
            android:id="@+id/cart_layout_add_imgBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_add_24"
            android:layout_below="@+id/cart_layout_type_txtview"
            android:layout_toEndOf="@+id/cart_layout_imgView"
            android:layout_margin="5dp"
            android:background="@drawable/round_button" />

        <TextView
            android:id="@+id/cart_layout_productCount_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_layout_type_txtview"
            android:layout_toEndOf="@+id/cart_layout_add_imgBtn"
            android:layout_margin="5dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/cart_layout_productRemove_imgBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_remove_24"
            android:layout_toEndOf="@+id/cart_layout_productCount_txtview"
            android:layout_below="@+id/cart_layout_type_txtview"
            android:layout_margin="5dp"
            android:background="@drawable/round_button" />

        <ImageView
            android:id="@+id/cart_layout_cart_bin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/cart_layout_productRemove_imgBtn"
            android:layout_margin="3dp"
            android:layout_alignParentRight="true"
            tools:srcCompat="@tools:sample/avatars" />





    </RelativeLayout>


</androidx.cardview.widget.CardView>