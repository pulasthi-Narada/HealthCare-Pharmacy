<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/daillog_background"
    android:layout_height="wrap_content">


    <ImageView
        
        android:id="@+id/cart_dilog_imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_shopping_cart_24" />

    <ImageButton
        android:id="@+id/cart_dilog_add_imgBtn"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_add_24"
        android:layout_below="@+id/cart_dilog_imageView"
        android:background="@drawable/round_button" />

    <TextView
        android:id="@+id/cart_dilog_productCount_txtview"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cart_dilog_imageView"
        android:layout_toEndOf="@+id/cart_dilog_add_imgBtn"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/cart_dilog_productRemove_imgBtn"
        android:layout_margin="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_remove_24"
        android:layout_toEndOf="@+id/cart_dilog_productCount_txtview"
        android:layout_below="@+id/cart_dilog_imageView"
        android:background="@drawable/round_button" />

    <ImageView
        android:id="@+id/cart_dilog_delete_imgview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/cart_dilog_imageView"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/ic_delete_bin" />
</RelativeLayout>