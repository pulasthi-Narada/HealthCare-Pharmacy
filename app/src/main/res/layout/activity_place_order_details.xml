<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:background="#E8EBF6"
    tools:context=".PlaceOrderDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/PlaceOrderDetailsActivity_textView4"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="50dp"
            android:background="@color/ligth_blue"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:text="Delivery Details" />

    <androidx.cardview.widget.CardView
        android:id="@+id/PlaceOrderDetailsActivity_main_cardview"
        android:layout_below="@+id/PlaceOrderDetailsActivity_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="#B7FFFFFF"
        app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/PlaceOrderDetailsActivity_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:text="Select A Delivery Method" />


        <RadioGroup
            android:id="@+id/PlaceOrderDetailsActivityas_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/PlaceOrderDetailsActivity_textView3">



        <RadioButton
            android:id="@+id/PlaceOrderDetailsActivity_as_son_as_radioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="As soon as possible" />

        <RadioButton
            android:id="@+id/PlaceOrderDetailsActivity_shdule_radioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule a date" />
        </RadioGroup>

        <EditText
            android:id="@+id/PlaceOrderDetailsActivity_expectEditText"
            android:layout_below="@id/PlaceOrderDetailsActivityas_radiogroup"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:hint="Expected Delivery Date"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/PlaceOrderDetailsActivity_textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_below="@id/PlaceOrderDetailsActivity_expectEditText"
            android:text="Delivery Address" />


        <androidx.cardview.widget.CardView 
            android:id="@+id/PlaceOrderDetailsActivity_address_cardview"
            android:layout_below="@id/PlaceOrderDetailsActivity_textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B7FFFFFF"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp">


                <RelativeLayout
                    android:id="@+id/PlaceOrderDetailsActivity_r"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp">


                    <TextView
                        android:id="@+id/PlaceOrderDetailsActivity_textView_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:text="name" />



                    <TextView
                        android:id="@+id/PlaceOrderDetailsActivity_textView_address"
                        android:layout_below="@+id/PlaceOrderDetailsActivity_textView_name"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:text="address" />

                    <TextView
                        android:id="@+id/PlaceOrderDetailsActivity_textView_pro"
                        android:layout_below="@+id/PlaceOrderDetailsActivity_textView_address"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:text="Province" />

                    <TextView
                        android:id="@+id/PlaceOrderDetailsActivity_textView_city"
                        android:layout_below="@+id/PlaceOrderDetailsActivity_textView_pro"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:text="city" />


                    <TextView
                        android:id="@+id/PlaceOrderDetailsActivity_textView_number"
                        android:layout_below="@+id/PlaceOrderDetailsActivity_textView_city"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:text="number" />

                    <TextView
                        android:id="@+id/PlaceOrderDetailsActivity_textView_mail"
                        android:layout_below="@+id/PlaceOrderDetailsActivity_textView_number"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="email" />

                    <View
                        android:id="@+id/PlaceOrderDetailsActivity_line"
                        android:layout_below="@+id/PlaceOrderDetailsActivity_textView_mail"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="2dp"
                        android:background="@color/ligth_blue"/>



                    <TextView
                        android:id="@+id/PlaceOrderDetailsActivity_remove_txt"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/PlaceOrderDetailsActivity_line"
                        android:layout_marginTop="5dp"
                       android:layout_centerHorizontal="true"
                        android:textColor="@color/ligth_blue"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:text="Edit" />

                </RelativeLayout>

            
            
            
        </androidx.cardview.widget.CardView>


        <EditText
            android:id="@+id/PlaceOrderDetailsActivity_order_remark_EditText"
            android:layout_below="@id/PlaceOrderDetailsActivity_address_cardview"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:hint="Order Remark"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/PlaceOrderDetailsActivity_total_textview"
            android:layout_below="@id/PlaceOrderDetailsActivity_order_remark_EditText"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="Total :"
            android:textColor="@color/ligth_blue" />
        
        
        
        


    </RelativeLayout>

    </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/PlaceOrderDetailsActivity_btn"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
           android:layout_below="@+id/PlaceOrderDetailsActivity_main_cardview"
            android:text="continue ->"
            android:background="@color/ligth_blue"
           />

    </RelativeLayout>

</ScrollView>